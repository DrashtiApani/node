<%- include('../header') %>

    <style>
        /* Reset unwanted padding/margins */
        .page-wrapper {
            padding: 0 !important;
        }

        /* search container */
        .search-container {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 10px;
            padding: 10px 15px;
            border-radius: 8px;
            max-width: 600px;
            margin-top: -10px;
            margin-bottom: 30px;
            margin-left: auto;
            margin-right: auto;
            transition: all 0.3s ease;

        }

        .search-container input[type="text"] {
            flex: 1;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #ced4da;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .search-container input[type="text"]:focus {
            outline: none;
            border-color: #495057;
            box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
        }

        .search-container button {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            background-color: #0d6efd;
            color: #fff;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .search-container button:hover {
            background-color: #0b5ed7;
        }

        .container-fluid,
        .container {
            max-width: 100%;
            padding-left: 20px;
            padding-right: 20px;
        }

        .category-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin: 30px auto;
            width: 100%;
        }

        .category-card {
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
            display: flex;
            flex-direction: column;
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .category-image {
            height: 200px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .category-card:hover .category-image {
            transform: scale(1.05);
        }

        .category-body {
            padding: 18px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .category-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
        }

        .category-actions {
            margin-top: auto;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .category-actions a {
            font-size: 1.2rem;
            transition: transform 0.2s ease;
        }

        .category-actions a:hover {
            transform: scale(1.2);
        }

        .empty-state {
            text-align: center;
            margin: 60px 0;
            color: #6c757d;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;

            padding: 0 20px;
        }

        @media (max-width: 768px) {
            .category-container {
                grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
                gap: 20px;
            }
        }
    </style>

    <div class="page-wrapper">
        <div class="page-header">
            <h3 class="fw-bold" style="color: #6c757d;margin-top: 20px;">Categories</h3>
            <a href="/category/addcategory" class="btn btn-primary">
                <i class="fa fa-plus me-1"></i> Add Category
            </a>
        </div>

        <% if (!Array.isArray(category) || category.length===0) { %>
            <div class="empty-state">
                <img src="/images/empty.svg" alt="No Categories" width="140">
                <h5 class="mt-3">No categories found</h5>
                <p class="small">Start by adding your first category.</p>
                <a href="/category/addcategory" class="btn btn-success">Add Category</a>
            </div>
            <% } else { %>

                
    <form method="GET" class="search-container">
      <input type="text" name="search" placeholder="Search blogs..."
        value="<%= typeof search !== 'undefined' ? search : '' %>">
      <button type="submit"><i class="fa fa-search me-1"></i> Search</button>
    </form>

                <div class="container-fluid">
                    <div class="category-container">
                        <% category.forEach(cat=> { %>
                            <div class="category-card">
                                <img src="<%= cat.categoryimage.startsWith('/') ? cat.categoryimage : '/' + cat.categoryimage %>"
                                    alt="<%= cat.categoryname %>" class="category-image">
                                <div class="category-body">
                                    <div class="category-title">
                                        <%= cat.categoryname %>
                                    </div>
                                    <div class="category-actions">
                                        <a href="/category/editcategory/<%= cat.id %>" title="Edit"><i
                                                class="fa fa-edit text-warning"></i></a>
                                        <a href="/category/deletecategory/<%= cat.id %>" title="Delete"
                                            onclick="return confirm('Are you sure?')"><i
                                                class="fa fa-trash text-danger"></i></a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <% } %>
    </div>

    <%- include('../footer') %>