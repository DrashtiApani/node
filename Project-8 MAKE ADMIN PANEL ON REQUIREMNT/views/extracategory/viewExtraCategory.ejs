<%- include('../header') %>

<style>
  /* Container & Header */
  .page-container {
    padding: 30px 20px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    flex-wrap: wrap;
  }

  /* Search box */
  .search-container {
    display: flex;
    align-items: center;
    margin-bottom: 25px;
    flex-wrap: wrap;
    gap: 10px;
    padding: 10px 15px;
    border-radius: 8px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .search-container input[type="text"] {
    flex: 1;
    padding: 10px 15px;
    border-radius: 8px;
    border: 1px solid #ced4da;
    font-size: 0.95rem;
  }

  .search-container button {
    padding: 10px 20px;
    border-radius: 8px;
    border: none;
    background-color: #0d6efd;
    color: #fff;
    font-weight: 600;
    cursor: pointer;
  }

  /* Card grid */
  .extra-category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

  /* Card style */
  .extra-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 6px 25px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .extra-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.15);
  }

  .extra-card img {
    width: 100%;
    height: 160px;
    object-fit: contain;
    overflow: hidden;
    margin-top: 5px;
    transition: transform 0.4s ease;
  }

  .extra-card:hover img {
    transform: scale(1.05);
  }

  .badge-label {
    position: absolute;
    top: 12px;
    left: 12px;
    background: linear-gradient(135deg, #ff6b6b, #f06595);
    color: #fff;
    padding: 5px 12px;
    border-radius: 25px;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 3px 6px rgba(0,0,0,0.2);
  }

  .extra-card-body {
    padding: 16px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .extra-card h5 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
    text-align: center;
    min-height: 48px;
  }

  .extra-info {
    font-size: 0.875rem;
    color: #495057;
    text-align: center;
    margin-bottom: 4px;
  }

  .extra-actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 12px;
  }

  .extra-actions a {
    font-size: 1.3rem;
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .extra-actions a:hover {
    transform: scale(1.3);
    color: #0d6efd;
  }

  .empty-state {
    text-align: center;
    margin: 60px 0;
    color: #6c757d;
  }
</style>

<div class="page-wrapper">
  <div class="page-container">
    <div class="page-header">
      <h4 class="fw-bold">Extra Categories</h4>
      <a href="/extracategory/addextracategory" class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Add Extra Category
      </a>
    </div>

    <!-- Live Search Input -->
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Search extra categories...">
      <button type="button" id="clearBtn">Clear</button>
    </div>

    <% if (!extracategory || extracategory.length === 0) { %>
      <div class="empty-state">
        <img src="/images/empty.svg" alt="No Extra Categories" width="140">
        <h5 class="mt-3">No extra categories found</h5>
        <p class="small">Start by adding your first extra category.</p>
        <a href="/extracategory/addextracategory" class="btn btn-success">Add Extra Category</a>
      </div>
    <% } else { %>
      <div class="extra-category-grid" id="categoryGrid">
        <% extracategory.forEach(ec => { %>
          <div class="extra-card" data-title="<%= ec.extracategory.toLowerCase() %>" data-sub="<%= ec.subcategory.subcategory.toLowerCase() %>" data-cat="<%= ec.category.categoryname.toLowerCase() %>">
            <img src="<%= ec.image.startsWith('/') ? ec.image : '/' + ec.image %>" alt="<%= ec.extracategory %>">
            <span class="badge-label"><%= ec.category.categoryname %></span>
            <div class="extra-card-body">
              <h5><%= ec.extracategory %></h5>
              <div class="extra-info">SubCategory: <%= ec.subcategory.subcategory %></div>
              <div class="extra-actions">
                <a href="/extracategory/editextracategory/<%= ec.id %>" title="Edit">üìù</a>
                <a href="/extracategory/deleteextracategory/<%= ec.id %>" title="Delete" onclick="return confirm('Are you sure?')">üóëÔ∏è</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</div>

<script>
  const searchInput = document.getElementById('searchInput');
  const clearBtn = document.getElementById('clearBtn');
  const cards = document.querySelectorAll('.extra-card');

  searchInput.addEventListener('input', () => {
    const val = searchInput.value.toLowerCase();
    let visibleCount = 0;

    cards.forEach(card => {
      const title = card.dataset.title;
      const sub = card.dataset.sub;
      const cat = card.dataset.cat;

      if (title.includes(val) || sub.includes(val) || cat.includes(val)) {
        card.style.display = 'flex';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Show empty state if no results
    const emptyState = document.querySelector('.empty-state');
    if (emptyState) {
      emptyState.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  });

  clearBtn.addEventListener('click', () => {
    searchInput.value = '';
    searchInput.dispatchEvent(new Event('input'));
  });
</script>

<%- include('../footer') %>
