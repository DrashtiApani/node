<%- include('header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <h4 class="page-title">Edit Blog</h4>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <form class="form-horizontal" method="post" action="/blog/updateBlog/<%= blogdata._id %>" enctype="multipart/form-data">
                        <div class="card-body">
                            <h4 class="card-title">Update Blog Details</h4>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" name="title" value="<%= blogdata.title %>" class="form-control">
                                </div>
                            </div>

                            <div class="form-group row">
                                <% var categories=["Technology","Food","Lifestyle","Education","Travel"] %>
                                <label class="col-sm-3 text-right">Category</label>
                                <div class="col-sm-9">
                                    <select name="category" class="form-control">
                                        <% categories.map((val)=>{ %>
                                            <option value="<%= val %>" <%= blogdata.category == val ? "selected" : "" %>><%= val %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Author</label>
                                <div class="col-sm-9">
                                    <input type="text" name="author" value="<%= blogdata.author %>" class="form-control">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Image</label>
                                <div class="col-sm-9">
                                    <% if(blogdata.image){ %>
                                        <img src="/<%= blogdata.image %>" width="100" height="80" class="mb-2">
                                    <% } %>
                                    <input type="file" name="image" class="form-control">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Content</label>
                                <div class="col-sm-9">
                                    <textarea name="content" class="form-control" rows="5"><%= blogdata.content %></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Tags</label>
                                <div class="col-sm-9">
                                    <input type="text" name="tags" value="<%= blogdata.tags %>" class="form-control">
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-success">Update</button>
                                <a href="/blog/viewBlog" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
